<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.susan.myapplication.Display1Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_revert" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:text="수도정보모니터링시스템"
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@android:color/holo_blue_dark"
            android:text="NOTICE"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:entries="@array/list1"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="148dp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:entries="@array/list2"
                tools:layout_editor_absoluteX="93dp"
                tools:layout_editor_absoluteY="78dp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:entries="@array/list3"
                tools:layout_editor_absoluteX="179dp"
                tools:layout_editor_absoluteY="78dp" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:entries="@array/list4"
                tools:layout_editor_absoluteX="262dp"
                tools:layout_editor_absoluteY="69dp" />

            <Button
                android:id="@+id/buttonMove"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이동"
                android:textSize="8pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_c1_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C1.Desc"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_c1_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C1.Val-C1.Val2"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_c1_bool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_c2_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C2.Desc"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_c2_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C2.Val1-C2.Val2"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_c2_bool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_c3_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C3.Desc"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_c3_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C3.Val1-C3.Val2"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_c3_bool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_c4_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C4.Desc"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_c4_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C4.Val1-C4.Val2"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_c4_bool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>





</android.support.constraint.ConstraintLayout>
